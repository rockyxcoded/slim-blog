{
    "name": "slim/slim-skeleton",
    "description": "A Slim Framework skeleton application for rapid development",
    "keywords": ["microframework", "rest", "router", "psr7"],
    "homepage": "http://github.com/slimphp/Slim-Skeleton",
    "license": "MIT",
    "authors": [
        {
            "name": "Fulfil Nelson",
            "email": "fulfilen@gmail.com",
            "homepage": "http://www.fulfilen.com"
        }
    ],

    "require": {
        "php": ">=5.5.0",
        "slim/slim": "^3.1",
        "monolog/monolog": "^1.17",
        "slim/twig-view": "^2.4",
        "illuminate/database": "^5.7",
        "respect/validation": "^1.1",
        "slim/csrf": "^0.8.3",
        "slim/flash": "^0.4.0",
        "vlucas/phpdotenv": "^2.5",
        "twig/extensions": "^1.5"
    },

    "autoload": {
        "psr-4": {
            "App\\": "app"
        },
        "files": [
            "app/helpers.php"
        ],
        "classmap": ["app/Mp3Lib/getid3/"]
    },

    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },

    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },

    "config": {
        "process-timeout" : 0
    },

    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }

}
