{% extends 'templates/app.twig' %}

{% block content %}

	<div class="row">
        <div class="col col-lg-8 mx-auto">
          <form  enctype="multipart/form-data" class="card" action="" method="post">
            <div class="card-body p-6">
            	<div class="card-title">Create New Post</div>
            	<div class="form-group">
            		<label class="form-label">Title <span class="form-required">*</span></label>
            		<input type="text" name="title" class="form-control {{ valErrors.title ? 'is-invalid' : '' }}"  value="{{ old.title }}">

            		{% if valErrors.title %}
            			<div class="invalid-feedback"> {{ valErrors.title | first }} </div>
            		{% endif %}
            	</div>

                <div class="form-group">
                    <div class="form-label">Thumbnail <span class="form-required">*</span></div>
                    <div class="custom-file">
                        <input type="file" name="thumbnail" class="custom-file-input {{ valErrors.thumbnail ? 'is-invalid' : '' }}" value="{{  old.thumbnail }}">
                        <label class="custom-file-label">Choose file</label>

                        {% if valErrors.thumbnail %}
                            <div class="invalid-feedback"> {{ valErrors.thumbnail | first }} </div>
                        {% endif %}
                    </div>
                </div>
                
                <div class="form-group">
                    <label class="form-label">Category <span class="form-required">*</span></label>
                    <select name="category" class="custom-select {{ valErrors.category ? 'is-invalid' : '' }}">
                        {% if categories %}
                            <option value="">--Choose--</option>
                            {% for item in categories %}
                                <option value="{{ item.id }}">{{ item.title }}</option>
                            {% endfor %}
                        {% else %}
                            <option value="">--Choose--</option>
                        {% endif %}
                    </select>

                    {% if valErrors.category %}
                        <div class="invalid-feedback"> {{ valErrors.category | first }} </div>
                    {% endif %}
                </div>

                <div class="form-group">
                    <label class="form-label">Content <span class="form-required">*</span></label>
                    <textarea name="content" rows="5" class="form-control {{ valErrors.content ? 'is-invalid' : '' }}">
                        {{  old.content }}
                    </textarea>

                    {% if valErrors.content %}
                        <div class="invalid-feedback"> {{ valErrors.content | first }} </div>
                    {% endif %}
                </div>

                <div class="form-footer">
                    <button type="submit" name="signup" class="btn btn-primary btn-block">Create new Topic</button>
                </div>

            </div>
            {{ csrf.field | raw }}
          </form>
        </div>
    </div>

{% endblock %}