{% extends 'templates/app.twig' %}

{% block content %}
	
	<div class="page-header">
		<h1 class="page-title">
			Latest Posts
		</h1>
	</div>
	<div class="row">
		<div class="col-lg-4 order-lg-1 mb-4">
			{% include 'templates/partials/post/sidebar.twig' %}
		</div>
		<div class="col-lg-8">
			<div class="row row-cards row-deck">
				{% if posts %}
					{% for post in posts %}
						<div class="col-lg-12">
							<div class="card">
								<div class="card-body d-flex flex-column">
									<h4><a href="{{ path_for('post.show', {'id': post.id, 'slug': post.slug}) }}"> {{ post.title }} </a></h4>
									<div class="text-muted"> {{ post.content[:300] }}...</div>
									<div class="d-flex align-items-center pt-5 mt-auto">
										<div class="avatar avatar-sm mr-3"><span class="fe fe-user text-success"></span></div>
										<div>
											<a href="{{ path_for('user.profile', {'id': post.author }) }}" class="text-success">{{ post.user.username | capitalize}}</a>
										</div>
										<div class="ml-auto text-muted">
											<small class="d-inline-block text-success"> <i class="fe fe-calendar"></i> {{ post.created_at|time_diff }}</small>
										</div>
									</div>
								</div>
							</div>
						</div>
					{% endfor %}
				{% else %}
				{% endif %}
			</div>
		</div>
	</div>
{% endblock %}