{% extends 'templates/app.twig' %}

{% block content %}

	<div class="row">
        <div class="col col-login mx-auto">
          <div class="text-center mb-6">
          </div>
          <form class="card" action="" method="post">
            <div class="card-body p-6">
            	<div class="card-title">Login to your account</div>
            	<div class="form-group">
            		<label class="form-label">Username</label>
            		<input type="text" name="username" class="form-control {{ valErrors.username ? 'is-invalid' : '' }}" value="{{ old.username }}" autofocus>

            		{% if valErrors.username %}
            			<div class="invalid-feedback"> {{ valErrors.username | first }} </div>
            		{% endif %}
            	</div>

            	<div class="form-group">
            		<label class="form-label">
            			Password
            			<a href="{{  path_for('auth.password.reset') }}" class="float-right small">I forgot password</a>
            		</label>
            		<input type="password" name="password" class="form-control {{ valErrors.password ? 'is-invalid' : '' }}">

            		{% if valErrors.password %}
            			<div class="invalid-feedback"> {{ valErrors.password | first }} </div>
            		{% endif %}
            	</div>

            	<div class="form-group">
            		<label class="custom-control custom-checkbox">
            			<input type="checkbox" class="custom-control-input" />
            			<span class="custom-control-label">Remember me</span>
            		</label>
            	</div>
            	<div class="form-footer">
            		<button type="submit" class="btn btn-primary btn-block">Sign in</button>
            	</div>
            </div>
          </form>
          <div class="text-center text-muted">
            Don't have account yet? <a href="{{  path_for('auth.signup') }}">Sign up</a>
          </div>
        </div>
    </div>

{% endblock %}