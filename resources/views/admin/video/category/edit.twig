{% extends 'templates/app.twig' %}

{% block content %}

	<div class="row row-cards row-deck">
        <div class="col col-lg-6 mx-auto">
              <div class="page-header"><h1 class="page-title">Edit Song Category</h1></div>
            <form class="card" action="{{ path_for( 'song.category.edit', {'id': category.id }) }}" method="post">
                <div class="card-body p-6">
                    <div class="form-group">
                        <label class="form-label">Title</label>
                        <input type="text" name="title" class="form-control {{ valErrors.title ? 'is-invalid' : '' }}"  value="{{ category.title }}" autofocus>

                        {% if valErrors.title %}
                          <div class="invalid-feedback"> {{ valErrors.title | first }} </div>
                        {% endif %}
                    </div>

                    <div class="form-group">
                        <label class="form-label">Slug</label>
                        <input type="text" name="slug" class="form-control {{ valErrors.slug ? 'is-invalid' : '' }}"  value="{{ category.slug }}">

                        {% if valErrors.slug %}
                            <div class="invalid-feedback"> {{ valErrors.slug | first }} </div>
                        {% endif %}
                    </div>

                    <div class="form-footer">
                        <button type="submit" name="submit" class="btn btn-primary btn-block">Send Request</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

{% endblock %}