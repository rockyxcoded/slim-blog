{% extends 'templates/app.twig' %}

{% block content %}

<div class="row row-cards row-deck">
  <div class="col-md-6 offset-md-3">

    <div class="page-header"><h1 class="page-title">Create Category</h1></div>

    <form class="card" action="{{ path_for( 'song.category.create' ) }}" method="post">
      <div class="card-body p-6">
        <div class="form-group">
          <label class="form-label">Title</label>
          <input type="text" name="title" class="form-control {{ valErrors.title ? 'is-invalid' : '' }}"  value="{{ old.title }}" autofocus>
          {% if valErrors.title %}
            <div class="invalid-feedback"> {{ valErrors.title | first }} </div>
          {% endif %}
        </div>
        <div class="form-footer">
          <button type="submit" name="submit" class="btn btn-primary btn-block">Send Request</button>
        </div>
      </div>
    </form>
  </div>
</div>

{% endblock %}